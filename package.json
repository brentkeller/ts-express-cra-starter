{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "run-s build:server build:client clean:build copy:server copy:client",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace server build",
    "clean:build": "rimraf build",
    "copy:client": "copyfiles -u 2 client/build/**/* build/client",
    "copy:server": "copyfiles -u 2 server/dist/**/* build",
    "dev": "run-p dev:client dev:server",
    "dev:client": "yarn workspace client start",
    "dev:server": "yarn workspace server dev",
    "start": "node build/index.js"
  },
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  }
}
